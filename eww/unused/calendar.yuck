(defwidget calendar-box []
  (box
    :class "calendar"
    (calendar 
      :day {date.day}
      :month {date.month}
      :year {date.year}
    )
  )
)

(defwidget closercalendar [window]
  (eventbox :onclick "eww close ${window} && eww close ${window}-closer && scripts/toggle_calendar.sh close &"))

(defwindow calendar-closer
    :monitor 0
    :geometry (geometry :width "100%" :height "100%")
    :stacking "fg"
    :focusable false
    (closercalendar :window "calendar"))
